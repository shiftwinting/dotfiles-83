# Basic
snippet if "if (...) { ... }"
if (${1:true}) {
	$0
}
endsnippet

snippet ife "if (...) { ... } else { ... }"
if (${1:true}) {
	$2
} else
	$0
}
endsnippet

snippet ex "export"
export $0
endsnippet

snippet as "async"
async $0
endsnippet

snippet aw "await"
await $0
endsnippet

snippet re "return"
return $0
endsnippet

snippet imp "import"
import ${0:def} from '${1}'
endsnippet

snippet req "require"
const $0 = require('$1')
endsnippet

snippet c "const"
const ${1} = ${2}
endsnippet

snippet cl "console.log"
console.log($0)
endsnippet

snippet ar "arrow symbol" i
=> $0
endsnippet

snippet af "arrow function" i
(${1}) => ${0}
endsnippet

snippet fn "old school good function"
function ${1}(${2}) {
	$0
}
endsnippet

# React
snippet pr "React - prop"
${1:prop}={$0}
endsnippet

snippet rrpw "React - Render Props Wrap"
<$1>
	{($2) => (
		${VISUAL}
	)}
</$1>
endsnippet

# Tests
snippet desc "jest describe"
describe("${1:test name}", () => {
	$0
})
endsnippet

snippet it "jest it"
it("${1:test name}", () => {
	$0
